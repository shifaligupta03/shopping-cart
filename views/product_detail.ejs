<% include layouts/header %>
<div class="row">
    <h1 class="page-header"><%= title%></h1>
    <div class="col-xs-12 col-md-5">
        <img  src="/images/product_images/<%= product._id%>/<%= product.image%>" alt="">
        <br>
    </div>

    <div class="col-xs-12 col-md-7">
        <p><%= product.desc %></p>
        <p><%= parseFloat(product.price).toFixed(2) %></p>
        <p><a href="/cart/add/<%= product.slug %>">Add to cart</a></p>
    </div>

    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image){ %>
                <% if(image !== 'thumbs'){ %>
                    <li>
                        <a data-fancybox="gallery" href="/images/product_images/<%= product._id%>/gallery/<%= image%>">
                        <img src="/images/product_images/<%= product._id%>/gallery/thumbs/<%= image%>">
                        </a>
                    </li>
                <% }%>
            <%}) %>
        </ul>
    </div>
</div>

<% include layouts/footer %>